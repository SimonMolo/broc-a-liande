{% extends 'members/base.html.twig' %}
{% block title %} {% endblock %}
{% block main %}
    <div class="border flex lightgrey ">
        {{ form_start(articleForm) }}
        <div class="addObjectDiv">
            <div class="lightgrey">
                {{ form_label(articleForm, "Nom De l'objet",{'label_attr':{'class': 'lightgrey label'}}) }}
                {{ form_widget(articleForm.title,{'attr':{'class': 'widget lightgrey titreArticle'}}) }}
            </div>
            <div class="lightgrey">
                {{ form_label(articleForm, "Année",{'label_attr':{'class': 'lightgrey label'}}) }}
                {{ form_widget(articleForm.time,{'attr':{'class': 'widget lightgrey annee'}}) }}
            </div>
            <div class="lightgrey">
                {{ form_label(articleForm, "Déscription de l'objet",{'label_attr':{'class': 'lightgrey label'}}) }}
                {{ form_widget(articleForm.desciption,{'attr':{'class': 'widget Description lightgrey'}}) }}
            </div>
            <div class="lightgrey">
                {{ form_label(articleForm, "Qualitées notoires",{'label_attr':{'class': 'lightgrey label'}}) }}
                {{ form_widget(articleForm.Qualite,{'attr':{'class': 'widget qualite lightgrey'}}) }}
            </div>
            <div class="lightgrey">
                {{ form_label(articleForm, "Dédauts notoires",{'label_attr':{'class': 'lightgrey label'}}) }}
                {{ form_widget(articleForm.Defauts,{'attr':{'class': 'widget defauts lightgrey'}}) }}
            </div>
            <div class="lightgrey">
                {{ form_label(articleForm, "Photo du Produit",{'label_attr':{'class': 'lightgrey label imgArticle'}}) }}
            </div>
            <div class="lightgrey">
                 {{ form_widget(articleForm.save, { 'label': 'Valider' }) }}
            </div>
        </div>
      {{ form_end(articleForm) }}


    </div>

{% endblock %}