{% extends 'admin/base.html.twig' %}
{% block title %}{% endblock %}
{% block main %}
<h2 class="adminTitle">Espace Admin</h2>
    <a href="{{ path('ajoutProduit') }}">Ajouter un article</a>
    <article class="  article flex">
    {% for article in articles %}
        <div class=" lightgrey flex squelette_article border">
            <div class=" lightgrey divimg flex">
                <img class="photo_article" src="{{ asset('/public/product_directory/' ~ article.articleFilename) }}" alt="">
            </div>
            <div class=" lightgrey adminTitleStand flex">
                <h2 class=" lightgrey articleTitle">{{ article.title }}</h2>
                {% if  article.time  %}
                    <p class=" lightgrey articleTitle">ann√©e :{{ article.time }}</p>
                {% endif %}
                <div class=" lightgrey flex divAdminBtn">
                    <div class="adminBtn lightgrey">
                        <a class="lightgrey"   href="{{ path("admin_product",{"id":article.id}) }}">Voir le Produit</a>
                    </div>
                    <div class="adminBtn lightgrey">
                        <a class="lightgrey" href="{{ path("admin_product_delete",{"id":article.id}) }}">Supprimer le Produit</a>
                    </div>
                    <div class="adminBtn lightgrey">
                        <a class="lightgrey" href="{{ path("admin_product_update",{"id":article.id}) }}">modifier le produit</a>
                    </div>
                </div>
            </div>

        </div>
    {% endfor %}
    </article>



{% endblock %}